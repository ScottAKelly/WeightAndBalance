@model AircraftBalance.Models.AircraftViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Weight and Balance Calculator</h2>


@using (Html.BeginForm("ChooseAircraft", "Aircraft" )) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Select the aircraft to work with</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(m => m.AircraftId)
            @Html.DropDownListFor(m => m.Aircraft, new SelectList(Model.Aircraft, "AircraftId", "AircraftName"), "", new { @class = "form-control"})
        </div>

        <div class="form-group">
            <input type="submit" value="Next" class="btn btn-primary" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
